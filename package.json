{
  "name": "fastify-docker-neo4j",
  "version": "1.0.0",
  "description": "Fastify app with Docker and Neo4j",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "dev:watch": "nodemon src/app.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev:debug": "nodemon --exec node --inspect=0.0.0.0:9229 -r ts-node/register src/app.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:build": "docker build -t fastify-app .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "dotenv": "^16.3.1",
    "@fastify/env": "^4.2.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@fastify/cors": "^9.0.1",
    "neo4j-driver": "^5.15.0",
    "fastify-plugin": "^4.5.1",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "@types/node": "^20.8.0",
    "pino-pretty": "^10.2.0",
    "@types/bcrypt": "^5.0.0"
  },
  "keywords": ["fastify", "docker", "neo4j", "api", "graph-database"],
  "author": "",
  "license": "MIT"
}